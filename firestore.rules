/**
 * @fileoverview Firestore Security Rules for InternAdda Courses application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for user-specific data
 * (progress, notes, test attempts) and allows public read access to courses
 * while restricting write access to authorized instructors.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles. User's ID is part of the path.
 * - /courses/{courseId}: Stores course information.
 * - /courses/{courseId}/lessons/{lessonId}: Stores lessons within a course.
 * - /courses/{courseId}/questions/{questionId}: Stores test questions for a course.
 * - /users/{userId}/progress/{progressId}: Stores user progress for courses.
 * - /users/{userId}/notes/{noteId}: Stores user notes for lessons.
 * - /users/{userId}/testAttempts/{attemptId}: Stores user test attempts.
 *
 * Key Security Decisions:
 * - Users can only access their own profiles, progress, notes, and test attempts.
 * - Courses, lessons, and questions are publicly readable but only instructors
 *   can create, update, or delete them. The instructorId is denormalized
 *   onto the course document.
 * - Listing user documents (profiles) is disallowed.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     * @returns {boolean} True if the request is authenticated, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user ID matches the provided user ID.
     * @param {string} userId The user ID to compare against the authenticated user ID.
     * @returns {boolean} True if the authenticated user ID matches the provided user ID, false otherwise.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the owner of an existing document.
     * @param {string} userId The user ID of the owner.
     * @returns {boolean} True if the user is the owner and the document exists, false otherwise.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Checks if the user is the instructor for a given course.
     * @param {string} courseId The ID of the course to check.
     * @returns {boolean} True if the user is the instructor of the course.
     */
     function isCourseInstructor(courseId) {
        return isSignedIn() && get(/databases/$(database)/documents/courses/$(courseId)).data.instructorId == request.auth.uid;
     }

    /**
     * @description Enforces rules for user profiles.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces rules for courses.
     */
    match /courses/{courseId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.instructorId == request.auth.uid;
      allow update: if isSignedIn() && resource != null && resource.data.instructorId == request.auth.uid;
      allow delete: if isSignedIn() && resource != null && resource.data.instructorId == request.auth.uid;

      /**
       * @description Enforces rules for lessons within a course.
       */
      match /lessons/{lessonId} {
          allow get, list: if true;
          allow create, update, delete: if isCourseInstructor(courseId);
      }

      /**
       * @description Enforces rules for questions within a course.
       * Students need to be able to list questions to take the test.
       */
      match /questions/{questionId} {
          allow list: if isSignedIn();
          allow get: if isSignedIn();
          allow create, update, delete: if isCourseInstructor(courseId);
      }
    }

    /**
     * @description Enforces rules for user progress tracking.
     */
    match /users/{userId}/progress/{progressId} {
      allow get, list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Enforces rules for user notes.
     */
    match /users/{userId}/notes/{noteId} {
      allow get, list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }
    
    /**
     * @description Enforces rules for user test attempts.
     */
    match /users/{userId}/testAttempts/{attemptId} {
        allow get, list: if isOwner(userId);
        allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
        // Users cannot update or delete their past attempts.
        allow update, delete: if false;
    }
  }
}
